{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
